<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
      @Styles.Render("~/Content/css")
     @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header >
            <div class="content-wrapper" style="height:1%;">
                @*<div class="float-left">*@
                        @*<p class="site-title">*@   
                     @Html.Raw(@Html.ActionLink("[replacetext]", "ShowCam", "Klali").ToHtmlString().Replace("[replacetext]", "<img src=\"" + @Url.Content("~/Images/phi-icon%20.png") + "\" alt=\"Link description\" title=\"Link description\" />"))@*</p>*@
                @*</div>*@
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        @Scripts.Render("~/bundles/jquery")
         @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
    </body>
</html>
